# Environment Variables Template
# Copy this to .env.local and fill in your values

# Application Settings
NEXT_PUBLIC_APP_NAME="National Assembly Prompt Generator"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Development/Production Environment
NODE_ENV=development

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3005/api
OPENAI_API_KEY=your_openai_api_key_here

# Token Limits (per format level)
NEXT_PUBLIC_TOKEN_LIMIT_BASIC=300
NEXT_PUBLIC_TOKEN_LIMIT_INTERMEDIATE=600
NEXT_PUBLIC_TOKEN_LIMIT_ADVANCED=900

# Rulepack Configuration
NEXT_PUBLIC_RULEPACK_VERSION=v1
NEXT_PUBLIC_DEFAULT_TONE=public_official_v1

# Format Categories
NEXT_PUBLIC_SUPPORTED_FORMATS=press_release,speech,sns,inquiry,report,media_scraping

# Validation Settings
NEXT_PUBLIC_ENABLE_STRICT_VALIDATION=true
NEXT_PUBLIC_MAX_PROMPT_LENGTH=2000

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_EXPORT=true

# Cache Settings
NEXT_PUBLIC_CACHE_TTL=3600
NEXT_PUBLIC_ENABLE_CACHING=true